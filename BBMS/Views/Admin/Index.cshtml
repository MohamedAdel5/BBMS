
@{
    ViewBag.Title = "Admin dashboard";
}
@{
    Layout = "";    /*Disable the layout page*/
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BBMS</title>
    <link rel="shortcut icon" type="image/ico" href="@Url.Content("~/bloodBag.ico")">

    <link href="@Url.Content("~/Content/dashboardAssets/css/bootstrap.css")" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="@Url.Content("~/Content/dashboardAssets/css/font-awesome.css")" rel="stylesheet" />
    <!-- MORRIS CHART STYLES-->
    <link href="@Url.Content("~/Content/dashboardAssets/js/morris/morris-0.4.3.min.css")" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="@Url.Content("~/Content/dashboardAssets/css/custom.css")" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='@Url.Content("http://fonts.googleapis.com/css?family=Open+Sans")' rel='stylesheet' type='text/css' />
</head>
<body>

    <div id="wrapper">
        <nav class="navbar navbar-default navbar-cls-top " role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Admin")" class="navbar-brand">Admin</a>
            </div>
                
            <div style="color: white; padding: 15px 50px 5px 50px; float: right; font-size: 16px;">
                @using (Html.BeginForm("SignOut", "Admin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <button class=" btn btn-sm btn-danger square-btn-adjust" type="submit" value="SignOut" name="id">Log Out</button>

                }
            </div>
            
        </nav>
        <!-- /. NAV TOP  -->
        <!--NAV SIDE -->
        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">
                    <li class="text-center">
                        <img src="@Url.Content("~/Content/dashboardAssets/img/find_user.png")" class="user-image img-responsive" />
                    </li>
                    <li>
                        <a class="active-menu" href="@Url.Action("Index", "Admin")"><i class="fa fa-dashboard fa-3x"></i> Hospitals Statistics</a>
                    </li>
                    <li>
                        <a href="@Url.Action("UsersStatistics", "Admin")"><i class="fa fa-desktop fa-3x"></i> Users Statistics</a>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-sitemap fa-3x"></i> Hospitals<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="@Url.Action("Create", "Hospitals")">Add Hospital</a>
                            </li>
                            <li>
                                <a href="@Url.Action("RemoveHospital", "Hospitals", null)">Remove Hospital</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#"><i class="fa fa-sitemap fa-3x"></i> Services<span class="fa arrow"></span></a>
                        <ul class="nav nav-second-level">
                            <li>
                                <a href="@Url.Action("Create", "Service")">Add Service</a>
                            </li>
                            <li>
                                <a href="@Url.Action("ShowRemoveServices", "Service")">Show/Remove Services</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="@Url.Action("SignUp", "Admin")"><i class="fa fa-user fa-3x"></i> SignUp an Admin</a>
                    </li>
                    <li style="margin-top:10px; margin-left:30px">
                        @using (Html.BeginForm("ChangePassword", "Admin", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            <label class="btn label label-danger" id="show">Change Password</label> <br /><br/>
                            <input type="password" name="pass" style="display:none;" class="chg_pass" />
                            <input type="submit" class="btn btn-xs btn-danger  chg_pass" style="display:none;" />
                        }
                        @if (ViewBag.passSuccess == true)
                        {
                            <label class="text-success">Done!</label>
                        }
                    </li>

                </ul>
            </div>
        </nav>
        <!-- /. NAV SIDE  -->


        <div id="page-wrapper">
            <div id="page-inner">
                <!-- ROW1  -->
                <div class="row">
                    <div class="col-md-12">
                        <h2>Admin Dashboard</h2>
                        <h5>Welcome!</h5>
                    </div>
                </div>
                <!-- /. ROW1  -->
                <!-- ROW2  -->
                <div class="row">
                    <div class="col-md-9 col-sm-12 col-xs-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Blood Bags
                            </div>
                            <div class="panel-body">
                                <div id="blood-bar-chart"></div>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="row">
                    <div class="col-md-9 col-sm-12 col-xs-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                Top Hospitals Used
                            </div>
                            <div class="panel-body">
                                <div id="hospitals-bar-chart"></div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-9 col-sm-12 col-xs-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                @if (ViewBag.bloodCampID != null)
                                {
                                    <p>
                                        Best Blood Camp Belongs to Hospital<strong>#@ViewBag.hospitalID @ViewBag.hospitalName</strong>
                                        <br />
                                        Blood Camp <strong>#@ViewBag.bloodCampID</strong> with Blood Bags = <strong>@ViewBag.bloodCampBags</strong>
                                    </p>
                                }

                            </div>
                        </div>
                    </div>
                </div>
                <!-- /. ROW2  -->
            </div>
            <!-- /. PAGE INNER  -->
        </div>
        <!-- /. PAGE WRAPPER  -->
        <hr />
        <div class="container-fluid" style="background-color:#202020;">
            <div class="text-center center-block bg-dark text-white">
                <p style="  color: white;">&copy; @DateTime.Now.Year - Made by Coffee and Love</p>
            </div>
        </div>
    </div>
    <!-- /. WRAPPER  -->




    <script src="@Url.Content("~/Content/dashboardAssets/js/jquery-1.10.2.js")"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="@Url.Content("~/Content/dashboardAssets/js/bootstrap.min.js")"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="@Url.Content("~/Content/dashboardAssets/js/jquery.metisMenu.js")"></script>
    <!-- MORRIS CHART SCRIPTS -->
    <script src="@Url.Content("~/Content/dashboardAssets/js/morris/raphael-2.1.0.min.js")"></script>
    <script src="@Url.Content("~/Content/dashboardAssets/js/morris/morris.js")"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="@Url.Content("~/Content/dashboardAssets/js/custom.js")"></script>
    <script src="@Url.Content("https://canvasjs.com/assets/script/canvasjs.min.js")"></script>
    <script>
        $(document).ready(function () {
            $("#show").click(function () {
                $(".chg_pass").toggle("swing");
            });
        });
    </script>
    <script>
        window.onload = function () {

                var chart = new CanvasJS.Chart("blood-bar-chart", {
                animationEnabled: true,
                theme: "light2", // "light1", "light2", "dark1", "dark2"
                title: {
                    text: "Blood Bags Statistics"
                },
                axisY: {
                    title: "Number of Bags"
                },
                data: [{
                    type: "column",
                    showInLegend: false,
                    legendMarkerColor: "grey",
                    legendText: "Write Legend Text here",
                    dataPoints: [
                        { y: @(ViewBag.bloodBagsStatistics != null? ViewBag.AP : 0), label: "A+" },
                        { y: @(ViewBag.bloodBagsStatistics != null? ViewBag.AN : 0), label: "A-" },
                        { y: @(ViewBag.bloodBagsStatistics != null? ViewBag.BP : 0), label: "B+" },
                        { y: @(ViewBag.bloodBagsStatistics != null? ViewBag.BN : 0), label: "B-" },
                        { y: @(ViewBag.bloodBagsStatistics != null? ViewBag.ABP: 0), label: "AB+" },
                        { y: @(ViewBag.bloodBagsStatistics != null? ViewBag.ABN: 0), label: "AB-" },
                        { y: @(ViewBag.bloodBagsStatistics != null? ViewBag.OP : 0), label: "O+" },
                        { y: @(ViewBag.bloodBagsStatistics != null? ViewBag.ON : 0), label: "O-" }
                    ]
                }]
                });



                var chart2 = new CanvasJS.Chart("hospitals-bar-chart", {
                animationEnabled: true,
                theme: "light2", // "light1", "light2", "dark1", "dark2"
                title: {
                    text: "Top " + @(ViewBag.topHospitalsCount != null? ViewBag.topHospitalsCount:0) + " Hospitals Used"
                },
                axisY: {
                    title: "Number of Services Used"
                },
                data: [{
                    type: "column",
                    showInLegend: false,
                    legendMarkerColor: "grey",
                    legendText: "Write Legend Text here",
                    dataPoints: [
                        { y: @(ViewBag.usingCount != null?ViewBag.usingCount[0]:0), label: "@(ViewBag.hospitals != null?ViewBag.hospitals[0]:"")" + " " },
                        { y: @(ViewBag.usingCount != null?ViewBag.usingCount[1]:0), label: "@(ViewBag.hospitals != null?ViewBag.hospitals[1]:"")" + " " },
                        { y: @(ViewBag.usingCount != null?ViewBag.usingCount[2]:0), label: "@(ViewBag.hospitals != null?ViewBag.hospitals[2]:"")" + " " },
                        { y: @(ViewBag.usingCount != null?ViewBag.usingCount[3]:0), label: "@(ViewBag.hospitals != null?ViewBag.hospitals[3]:"")" + " " },
                        { y: @(ViewBag.usingCount != null?ViewBag.usingCount[4]:0), label: "@(ViewBag.hospitals != null?ViewBag.hospitals[4]:"")" + " " },
                        { y: @(ViewBag.usingCount != null?ViewBag.usingCount[5]:0), label: "@(ViewBag.hospitals != null?ViewBag.hospitals[5]:"")" + " " },
                        { y: @(ViewBag.usingCount != null?ViewBag.usingCount[6]:0), label: "@(ViewBag.hospitals != null?ViewBag.hospitals[6]:"")" + " " },
                        { y: @(ViewBag.usingCount != null?ViewBag.usingCount[7]:0), label: "@(ViewBag.hospitals != null?ViewBag.hospitals[7]:"")" + " " },
                        { y: @(ViewBag.usingCount != null?ViewBag.usingCount[8]:0), label: "@(ViewBag.hospitals != null?ViewBag.hospitals[8]:"")" + " " },
                        { y: @(ViewBag.usingCount != null?ViewBag.usingCount[9]:0), label: "@(ViewBag.hospitals != null?ViewBag.hospitals[9]:"")" + " " }
                    ]
                }]
            });



            chart.render();
            chart2.render();

            $(".canvasjs-chart-container").find(".canvasjs-chart-canvas:first").css("position", "relative");

        }
    </script>
</body>
</html>