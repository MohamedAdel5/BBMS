@model IEnumerable<BBMS.hospital_provides_service>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Value
        </th>
        <th>
            Hospital Name
        </th>
        <th>
            Service Name
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.value)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.hospital.username)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.service.name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.hospital_id,service=item.service_name }) |
            @Html.ActionLink("Details", "Details", new { id = item.hospital_id, service = item.service_name }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.hospital_id, service = item.service_name })
        </td>
    </tr>
}

</table>
