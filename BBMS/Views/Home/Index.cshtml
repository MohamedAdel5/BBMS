@{
    ViewBag.Title = "Home Page";
}
@section AddToHead{
    <link href="@Url.Content("~/Content/IndexCss.css")" rel="stylesheet" type="text/css" />
}
    <div class="jumbotron">
        <h1 style="color:darkred">Blood Donation Bonus System</h1>
        <p class="lead" >Donate Blood. Be a hero!</p>
        <div id="Maincarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#Maincarousel" data-slide-to="0" class="active"></li>
                <li data-target="#Maincarousel" data-slide-to="1"></li>
                <li data-target="#Maincarousel" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="item active">
                    <img class="d-block w-100" src="~/Images/img4.jpg" alt="First slide">
                </div>
                <div class="item">
                    <img class="d-block w-100" src="~/Images/img5.jpg" alt="Second slide">
                </div>
                <div class="item">
                    <img class="d-block w-100" src="~/Images/img6.jpg" alt="Third slide">
                </div>
            </div>
            <!-- Left and right controls -->
            <a class="left carousel-control" href="#Maincarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#Maincarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

<div class="row">
    <div class="col-md-12">
        <h2>Getting started</h2>
        <p>
            Blood donation system that encourages people to donate blood by giving them points per donation.
        </p>
        <p>
            You can use these points to get services from the available services in the system
        </p>
    </div>

</div>

