@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_NoNavLayout.cshtml";
}

<h2>Add Service</h2>

@using (Html.BeginForm("Create", "Service", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>service</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           <label class = "control-label col-md-2">Service name</label>
           <div class="col-md-10">
               <input type="text" class="form-control" placeholder="e.g:- Full Scan" name="service_name"/>
               @if(ViewBag.Failure == true)
               {
                   <label class = "text-danger">Failed to insert service</label>
               }
           </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

    <div>
        @Html.ActionLink("Back To Admin Dashboard", "Index", "Admin")
    </div>
